<div class="container-section-notes">
    <div class=""></div>

    <div class="">
        <h1>Buscar notas</h1>
        <div class="notes">

            {{#each noteSearch}}
            <div class="">
                <div class="note note-main note-main-edit {{category}}" id="{{_id}}">
                    <div class="">
                        <h4 class="">{{title}}
                            <div class="">
                                <button class="container-options">
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                </button>
                                <div class="container-options-buttons">
                                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="delete">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </h4>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>

            {{/each}}

        </div>

        <section class="section-btn-voler">
            <a href="/notes">
                <button>Volver</button>
            </a>
        </section>

    </div>
    {{#each noteSearch}}

    <div class="container-main-note-edit" id="edit-note{{_id}}">
        <div class="note note-edit">
            <div class="container-note-edit">

                <form action="/notes/edit/{{_id}}?_method=PUT" method="POST">
                    <div class="padding-form-edit">
                        <input type="hidden" name="_method" value="PUT">
                        <input type='text' name="title" class="title-edit" value="{{title}}" />
                        <textarea name="description">{{description}}</textarea>
                    </div>

                    <div id="form-add-button-edit" class="container-button ">
                        <div class="categorySelector">
                            <input type="hidden" class="inputHideEdit" name="category" id="category-edit"
                                placeholder="category">
                            <div class="container-categories">
                                <div id="categoryBlue"
                                    class="categorySelectorCircle categorySelectorCircleEdit categoryBlue"></div>
                                <div id="categoryRed"
                                    class="categorySelectorCircle categorySelectorCircleEdit categoryRed"></div>
                                <div id="categoryYellow"
                                    class="categorySelectorCircle categorySelectorCircleEdit categoryYellow"></div>
                                <div id="categoryBlack"
                                    class="categorySelectorCircle categorySelectorCircleEdit categoryBlack"></div>
                                <div id="categoryGreen"
                                    class="categorySelectorCircle categorySelectorCircleEdit categoryGreen"></div>
                                <div id="categoryWhite"
                                    class="categorySelectorCircle categorySelectorCircleEdit categoryWhite"></div>

                            </div>
                        </div>
                        <button type="submit" class="add-button">Actualizar</button>
                        <input type="button" id="close-form-edit" class="add-button close-form-edit" value="Cancelar">
                    </div>
                </form>
            </div>
        </div>

    </div>
    {{/each}}

</div>