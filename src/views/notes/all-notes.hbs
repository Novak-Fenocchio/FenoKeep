<div class="row">
    {{#each notes}}
    <div class="col-lg 3">
        <div class="card">
            <div class="card-bod">
                <h4 class="d-flex justify-content-between aling-items-center">{{title}}
                    <a href="notes/edit/{{_id}}"><i class="fa fa-pencil"></a></i>
                </h4>
                <p>{{description}}</p>
                <form action="notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value='DELETE'>
                    <button type="submit">Delete </button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<a href="/notes/add">Add</a>